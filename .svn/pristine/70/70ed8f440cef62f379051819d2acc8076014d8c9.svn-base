<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.newer.dao.GoodsMapper">
	
	<!-- 查询所有 -->
	<select id="queryAll" resultType="com.newer.bean.Goods">
		select * from tb_goods
	</select>
	
	<!-- 根据类别查询 -->
	<select id="queryByGtype" parameterType="String" resultType="com.newer.bean.Goods">
		select * from tb_goods where gtype=#{gtype}
	</select>
	
	<!-- 根据id查询商品信息 -->
	<select id="queryById" parameterType="int" resultType="com.newer.bean.Goods">
		select * from tb_goods where id=#{id}
	</select>
	
	<!-- 根据id查询商品信息 -->
	<select id="queryByHot" parameterType="int" resultType="com.newer.bean.Goods">
		select * from tb_goods where hot=#{hot}
	</select>
	
	<!-- 根据商品名字模糊查询-->
	<select id="queryByGname" parameterType="String" resultType="com.newer.bean.Goods">
		select * from tb_goods where gname like concat('%',#{gname},'%')
	</select>
</mapper>