<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.newer.dao.UserMapper">

	<insert id="regist" parameterType="com.newer.bean.User">
		insert into 
		tb_user(username,pwd)
		values(#{username},#{pwd})
	</insert>
	
	<select id="checkRegist" parameterType="String" resultType="com.newer.bean.User">
		select * from tb_user
		where username=#{username}
	</select>
	
	<select id="login" parameterType="com.newer.bean.User" resultType="com.newer.bean.User">
		select * from tb_user 
		where username=#{username} 
		and pwd=#{pwd}
	</select>
	
	
	
</mapper>