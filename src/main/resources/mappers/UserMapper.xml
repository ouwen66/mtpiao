<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.newer.dao.UserMapper">

	<!-- 注册方法 -->
	<insert id="regist" parameterType="com.newer.bean.User">
		insert into 
		tb_user(username,pwd)
		values(#{username},#{pwd})
	</insert>
	
	<!-- 验证用户名是否存在 -->
	<select id="checkRegist" parameterType="String" resultType="com.newer.bean.User">
		select * from tb_user
		where username=#{username}
	</select>
	
	<!-- 登录方法 -->
	<select id="login" parameterType="com.newer.bean.User" resultType="com.newer.bean.User">
		select * from tb_user 
		where username=#{username} 
		and pwd=#{pwd}
	</select>
	
	<!-- 修改密码 -->
	<update id="updatePwd" parameterType="com.newer.bean.User">
		update tb_user set pwd=#{pwd} where username=#{username}
	</update>
	
	<!-- 查询当前用户所有信息 -->
	<select id="queryById" parameterType="int" resultType="com.newer.bean.User">
		select * from tb_user where id=#{id}
	</select>
	
	<update id="updateUser" parameterType="com.newer.bean.User">
		update tb_user 
		set realname=#{realname},
		sex=#{sex},birthday=#{birthday},
		cardid=#{cardid},city=#{city}
		where id=#{id}
	</update>
</mapper>