<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="com.newer.dao.NoticeMapper">
	 <!-- 根据公告类别查询商公告信息 selelctByNoticetype-->
     <select id="selectByNoticetype" parameterType="int" resultType="com.newer.bean.Notice">
        select* from tb_notice where noticetype=#{noticetype}
     </select>
     
	 <!-- 根据ID查询公告信息 -->
	 <select id="selectById" parameterType="int" resultType="com.newer.bean.Notice">
	 select * from tb_notice where id=#{id}
	 </select>
	 
	  <!-- 查询首页热门公告信息 -->
	 <select id="selectHot" parameterType="int" resultType="com.newer.bean.Notice">
	 select * from tb_notice where noticetype=#{noticetype} and hot=#{hot}
	 </select>
 </mapper>